{
  "name": "smartlead-cli",
  "version": "2.0.0",
  "description": "ðŸš€ Professional multi-module CLI for email marketing platforms. Complete TypeScript implementation with SmartLead and Instantly modules, 80+ commands, beautiful UI, and comprehensive testing.",
  "main": "dist/core/index.js",
  "types": "dist/core/index.d.ts",
  "bin": {
    "smartlead": "dist/bin/smartlead",
    "sl": "dist/bin/sl"
  },
  "files": [
    "dist/**/*",
    "docs/README.md",
    "docs/CONTRIBUTING.md",
    "docs/ROADMAP.md",
    "docs/CHANGELOG.md",
    "LICENSE",
    "scripts/install.sh"
  ],
  "scripts": {
    "build": "bash scripts/build.sh",
    "dev": "ts-node --project tsconfig.json src/core/index.ts",
    "watch": "nodemon --exec ts-node --project tsconfig.json src/core/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "install-global": "npm run build && npm install -g .",
    "uninstall-global": "npm uninstall -g smartlead-cli",
    "setup": "bash scripts/install.sh",
    "package": "npm pack",
    "start": "node dist/core/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/smartlead-cli.git"
  },
  "bugs": {
    "url": "https://github.com/username/smartlead-cli/issues"
  },
  "homepage": "https://github.com/username/smartlead-cli#readme",
  "keywords": [
    "smartlead",
    "instantly",
    "cli",
    "email",
    "campaign",
    "marketing",
    "api",
    "terminal",
    "command-line",
    "typescript",
    "modular",
    "automation",
    "crm",
    "outreach",
    "sales",
    "nodejs",
    "multi-module",
    "professional",
    "enterprise"
  ],
  "author": {
    "name": "SmartLead CLI Contributors"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "preferGlobal": true,
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "figlet": "^1.7.0",
    "gradient-string": "^1.2.0",
    "inquirer": "^8.2.6"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/gradient-string": "1.1.6",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "node": ">=16.0.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/smartlead-cli"
  }
}
