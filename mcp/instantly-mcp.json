{
  "mcpServers": {
    "instantly": {
      "command": "@cec/instantly/mcp-server",
      "env": {
        "INSTANTLY_API_KEY": "${INSTANTLY_API_KEY}"
      }
    }
  },
  "resources": [
    {
      "name": "instantly_accounts",
      "description": "Instantly email account management",
      "type": "api",
      "base_url": "https://api.instantly.ai/api/v1",
      "auth": "Bearer ${INSTANTLY_API_KEY}",
      "endpoints": [
        {
          "path": "/account/accounts",
          "method": "GET",
          "description": "List email accounts"
        },
        {
          "path": "/account/accounts",
          "method": "POST",
          "description": "Add email account"
        },
        {
          "path": "/account/accounts/{email}/warmup",
          "method": "PATCH",
          "description": "Control warmup status"
        }
      ]
    },
    {
      "name": "instantly_campaigns",
      "description": "Instantly campaign management",
      "endpoints": [
        {
          "path": "/campaign/list",
          "method": "GET",
          "description": "List campaigns"
        },
        {
          "path": "/campaign/create",
          "method": "POST",
          "description": "Create campaign"
        },
        {
          "path": "/campaign/launch/{id}",
          "method": "POST",
          "description": "Launch campaign"
        },
        {
          "path": "/campaign/pause/{id}",
          "method": "POST",
          "description": "Pause campaign"
        }
      ]
    },
    {
      "name": "instantly_leads",
      "description": "Instantly lead management",
      "endpoints": [
        {
          "path": "/campaign/add_leads/{campaign_id}",
          "method": "POST",
          "description": "Add leads to campaign"
        },
        {
          "path": "/campaign/leads/{campaign_id}",
          "method": "GET",
          "description": "Get campaign leads"
        },
        {
          "path": "/leads/verify/{campaign_id}",
          "method": "POST",
          "description": "Verify lead emails"
        }
      ]
    }
  ],
  "tools": [
    {
      "name": "cec_instantly",
      "description": "Execute Instantly commands via CEC CLI",
      "examples": [
        "cec exec instantly campaigns:list",
        "cec exec instantly accounts:warmup --args '{\"email\":\"user@domain.com\",\"status\":\"start\"}'",
        "cec exec instantly analytics:campaign --args '{\"id\":\"123\",\"period\":\"30d\"}'"
      ]
    }
  ],
  "metadata": {
    "name": "Instantly.ai High-Volume Email Automation",
    "version": "2.0.0",
    "description": "High-volume email automation with industry-leading deliverability",
    "total_operations": 35,
    "focus": "High-volume sending, deliverability, inbox management",
    "documentation": "https://developer.instantly.ai/"
  }
} 