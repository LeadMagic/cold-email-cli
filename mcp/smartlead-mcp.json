{
  "mcpServers": {
    "smartlead": {
      "command": "@cec/smartlead/mcp-server",
      "args": ["--query-param-auth"],
      "env": {
        "SMARTLEAD_API_KEY": "${SMARTLEAD_API_KEY}"
      }
    }
  },
  "resources": [
    {
      "name": "smartlead_campaigns",
      "description": "SmartLead campaign management with query parameter authentication",
      "type": "api",
      "base_url": "https://server.smartlead.ai/api/v1",
      "auth_method": "query_param",
      "auth_param": "api_key",
      "endpoints": [
        {
          "path": "/campaigns",
          "method": "GET",
          "description": "List campaigns with pagination",
          "query_params": ["limit", "offset", "api_key"]
        },
        {
          "path": "/campaigns",
          "method": "POST",
          "description": "Create new campaign",
          "query_params": ["api_key"],
          "required_body": ["name"]
        },
        {
          "path": "/campaigns/{id}",
          "method": "GET",
          "description": "Get campaign details",
          "query_params": ["api_key"]
        },
        {
          "path": "/campaigns/{id}/start",
          "method": "POST",
          "description": "Start campaign",
          "query_params": ["api_key"]
        },
        {
          "path": "/campaigns/{id}/pause",
          "method": "POST", 
          "description": "Pause campaign",
          "query_params": ["api_key"]
        }
      ]
    },
    {
      "name": "smartlead_leads",
      "description": "SmartLead lead management",
      "endpoints": [
        {
          "path": "/campaigns/{campaign_id}/leads",
          "method": "GET",
          "description": "List campaign leads",
          "query_params": ["api_key", "limit", "offset"]
        },
        {
          "path": "/campaigns/{campaign_id}/leads",
          "method": "POST",
          "description": "Add leads to campaign",
          "query_params": ["api_key"],
          "required_body": ["lead_list"]
        }
      ]
    },
    {
      "name": "smartlead_accounts",
      "description": "SmartLead email account management",
      "endpoints": [
        {
          "path": "/email-accounts",
          "method": "GET",
          "description": "List email accounts",
          "query_params": ["api_key"]
        },
        {
          "path": "/email-accounts/{email}/warmup",
          "method": "POST",
          "description": "Control email warmup",
          "query_params": ["api_key"],
          "required_body": ["action"]
        }
      ]
    }
  ],
  "tools": [
    {
      "name": "cec_smartlead",
      "description": "Execute SmartLead commands via CEC CLI",
      "usage": "cec exec smartlead <command> --args '{...}'",
      "examples": [
        "cec exec smartlead campaigns:list --args '{\"limit\":10}'",
        "cec exec smartlead campaigns:create --args '{\"name\":\"New Campaign\"}'",
        "cec exec smartlead leads:add-bulk --args '{\"campaign_id\":\"123\",\"leads\":[...]}'"
      ]
    }
  ],
  "metadata": {
    "name": "SmartLead Email Sequence Automation",
    "version": "2.0.0",
    "description": "Professional email sequence automation with SmartLead.ai",
    "total_operations": 25,
    "focus": "Email sequences, campaign management, lead automation",
    "documentation": "https://docs.smartlead.ai/"
  }
} 