{
  "mcpServers": {
    "apollo": {
      "command": "@cec/apollo/mcp-server",
      "env": {
        "APOLLO_API_KEY": "${APOLLO_API_KEY}"
      }
    }
  },
  "resources": [
    {
      "name": "apollo_sequences",
      "description": "Apollo email sequence management",
      "type": "api",
      "base_url": "https://api.apollo.io/v1",
      "auth": "X-Api-Key: ${APOLLO_API_KEY}",
      "endpoints": [
        {
          "path": "/emailer_campaigns",
          "method": "GET",
          "description": "List email sequences"
        },
        {
          "path": "/emailer_campaigns",
          "method": "POST",
          "description": "Create email sequence"
        },
        {
          "path": "/emailer_campaigns/{id}",
          "method": "GET",
          "description": "Get sequence details"
        },
        {
          "path": "/emailer_campaigns/{id}/add_contact_ids",
          "method": "POST",
          "description": "Add contacts to sequence"
        }
      ]
    },
    {
      "name": "apollo_contacts",
      "description": "Apollo contact management and search",
      "endpoints": [
        {
          "path": "/mixed_people/search",
          "method": "POST",
          "description": "Search for contacts"
        },
        {
          "path": "/contacts/{id}",
          "method": "GET",
          "description": "Get contact details"
        },
        {
          "path": "/people/match",
          "method": "POST",
          "description": "Enrich person data"
        }
      ]
    },
    {
      "name": "apollo_organizations",
      "description": "Apollo organization search and enrichment",
      "endpoints": [
        {
          "path": "/mixed_companies/search",
          "method": "POST",
          "description": "Search organizations"
        },
        {
          "path": "/organizations/enrich",
          "method": "POST",
          "description": "Enrich company data"
        }
      ]
    },
    {
      "name": "apollo_templates",
      "description": "Apollo email template management",
      "endpoints": [
        {
          "path": "/emailer_templates",
          "method": "GET",
          "description": "List email templates"
        },
        {
          "path": "/emailer_templates",
          "method": "POST",
          "description": "Create email template"
        }
      ]
    }
  ],
  "tools": [
    {
      "name": "cec_apollo",
      "description": "Execute Apollo commands via CEC CLI",
      "examples": [
        "cec exec apollo sequences:list",
        "cec exec apollo contacts:search --args '{\"keywords\":\"VP Sales\",\"company_size\":\"50-200\"}'",
        "cec exec apollo sequences:create --args '{\"name\":\"Outreach Sequence\"}'"
      ]
    }
  ],
  "metadata": {
    "name": "Apollo.io Email Sequence Automation",
    "version": "1.0.0",
    "description": "Professional email sequences and outreach automation with contact management",
    "total_operations": 42,
    "focus": "Email sequences, contact management, outreach automation",
    "documentation": "https://docs.apollo.io/"
  }
} 