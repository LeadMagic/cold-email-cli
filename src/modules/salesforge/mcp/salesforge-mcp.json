{
  "mcpServers": {
    "salesforge": {
      "command": "cold-email-cli",
      "args": ["salesforge", "--mcp"],
      "env": {
        "SALESFORGE_API_KEY": "${SALESFORGE_API_KEY}"
      }
    }
  },
  "resources": [
    {
      "name": "salesforge_campaigns",
      "description": "Salesforge AI-powered email campaign management",
      "type": "api",
      "base_url": "https://api.salesforge.ai/public/v2",
      "auth": "Bearer ${SALESFORGE_API_KEY}",
      "endpoints": [
        {
          "path": "/campaigns",
          "method": "GET",
          "description": "List AI-powered campaigns"
        },
        {
          "path": "/campaigns",
          "method": "POST", 
          "description": "Create AI-optimized campaign"
        },
        {
          "path": "/campaigns/{id}",
          "method": "GET",
          "description": "Get campaign with AI insights"
        },
        {
          "path": "/campaigns/{id}",
          "method": "PATCH",
          "description": "Update campaign settings"
        },
        {
          "path": "/campaigns/{id}",
          "method": "DELETE",
          "description": "Delete campaign"
        }
      ]
    },
    {
      "name": "salesforge_sequences",
      "description": "Salesforge AI-generated email sequences",
      "type": "api",
      "endpoints": [
        {
          "path": "/sequences",
          "method": "GET",
          "description": "List AI-generated sequences"
        },
        {
          "path": "/sequences",
          "method": "POST",
          "description": "Create AI-powered sequence"
        },
        {
          "path": "/sequences/{id}",
          "method": "GET",
          "description": "Get sequence details"
        },
        {
          "path": "/sequences/{id}/optimize",
          "method": "POST",
          "description": "AI-optimize sequence"
        }
      ]
    },
    {
      "name": "salesforge_templates",
      "description": "Salesforge AI-powered email templates",
      "type": "api",
      "endpoints": [
        {
          "path": "/templates",
          "method": "GET",
          "description": "List AI-optimized templates"
        },
        {
          "path": "/templates",
          "method": "POST",
          "description": "Create AI-optimized template"
        },
        {
          "path": "/templates/{id}",
          "method": "GET",
          "description": "Get template details"
        },
        {
          "path": "/templates/{id}/optimize",
          "method": "POST",
          "description": "AI-optimize template performance"
        }
      ]
    },
    {
      "name": "salesforge_leads",
      "description": "Salesforge lead management with AI scoring",
      "type": "api",
      "endpoints": [
        {
          "path": "/leads",
          "method": "GET",
          "description": "List leads with AI engagement scores"
        },
        {
          "path": "/leads",
          "method": "POST",
          "description": "Create lead with AI enrichment"
        },
        {
          "path": "/leads/{id}",
          "method": "GET",
          "description": "Get lead with AI insights"
        }
      ]
    },
    {
      "name": "salesforge_analytics",
      "description": "Salesforge AI analytics and insights",
      "type": "api",
      "endpoints": [
        {
          "path": "/analytics/performance",
          "method": "GET",
          "description": "Get AI performance analytics"
        },
        {
          "path": "/analytics/ai-insights/{campaign_id}",
          "method": "GET", 
          "description": "Get AI-generated insights"
        },
        {
          "path": "/analytics/predictions",
          "method": "GET",
          "description": "Get AI performance predictions"
        }
      ]
    }
  ],
  "tools": [
    {
      "name": "cec_salesforge",
      "description": "Execute Salesforge commands via CEC CLI",
      "usage": "cec salesforge <command> [options]",
      "examples": [
        "cec salesforge campaigns:create --name 'AI Campaign' --ai_optimization true",
        "cec salesforge sequences:create --persona 'decision_maker'",
        "cec salesforge templates:optimize --id template_123 --goal reply_rate",
        "cec salesforge analytics:ai-insights --campaign_id campaign_123"
      ]
    }
  ],
  "metadata": {
    "name": "Salesforge.ai AI-Powered Email Automation",
    "version": "1.0.0",
    "description": "AI-powered email sequences with smart personalization and optimization",
    "total_operations": 42,
    "focus": "AI automation, sequence generation, smart personalization",
    "documentation": "https://api.salesforge.ai/public/v2/swagger/index.html"
  }
} 