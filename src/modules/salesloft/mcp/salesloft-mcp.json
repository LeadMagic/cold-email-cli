  "mcpVersion": "0.1.0",
  "client": {
    "name": "Salesloft CLI",
    "version": "2.0.0"
  },
  "server": {
    "command": "bun",
    "args": [
      "run",
      "src/cli.ts",
      "salesloft"
    ],
    "env": {
      "SALESLOFT_API_KEY": "${SALESLOFT_API_KEY}",
      "NODE_ENV": "production"
    }
  },
  "capabilities": {
