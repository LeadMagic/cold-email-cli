        "name": "salesloft_cadences",
        "description": "Manage Salesloft cadences operations with comprehensive functionality",
        "parameters": {
          "type": "object",
          "properties": {
            "action": {
              "type": "string",
              "enum": [
                "list",
                "create",
                "get",
                "update",
                "delete",
                "analytics"
              ],
              "description": "Action to perform"
            },
            "id": {
              "type": "string",
              "description": "Resource ID for specific operations"
            }
          },
          "required": [
